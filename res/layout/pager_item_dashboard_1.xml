<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.google.android.apps.iosched.ui.widget.DashboardLayout
        android:id="@+id/dashboardLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <Button
            android:id="@+id/home_btn_myshows"
            style="@style/DashboardButton"
            android:drawableTop="@drawable/tv"
            android:text="Library" />

        <Button
            android:id="@+id/home_btn_search"
            style="@style/DashboardButton"
            android:drawableTop="@drawable/search"
            android:text="Search" />

        <Button
            android:id="@+id/home_btn_recommendations"
            style="@style/DashboardButton"
            android:drawableTop="@drawable/help"
            android:text="Suggestions" />

        <Button
            android:id="@+id/home_btn_calendar"
            style="@style/DashboardButton"
            android:drawableTop="@drawable/calendar"
            android:text="Calendar" />
    </com.google.android.apps.iosched.ui.widget.DashboardLayout>

</LinearLayout>